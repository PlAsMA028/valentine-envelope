<div class="hint">Click the button to open the envelope, then click the letter ğŸ’Œ</div>

<script>
const letter = document.getElementById("letter");
const env = document.getElementById("env");
const openBtn = document.getElementById("openBtn");
let step=0;

function heartRain(){
  for(let i=0;i<40;i++){
    setTimeout(()=>{
      const heart=document.createElement("div");
      heart.className="heart";
      heart.style.left=Math.random()*100+"vw";
      heart.style.animationDuration=3+Math.random()*2+"s";
      document.body.appendChild(heart);
      setTimeout(()=>heart.remove(),5000);
    },i*80);
  }
}

// Step 1: Open envelope via button + heart rain + slide letter out
openBtn.addEventListener("click", e=>{
  e.stopPropagation();
  if(step===0){
    env.classList.add("open");
    heartRain();
    step=1;
    setTimeout(()=>env.classList.add("slide"),300);
  }
});

// Step 2: unfold letter downward
letter.addEventListener("click", e=>{
  e.stopPropagation();
  if(step===1){
    letter.classList.add("unfold");
    step=2;
  }
});
</script>

